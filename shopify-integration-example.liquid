<!-- Chatbot iframe integration -->
<div id="shopify-chatbot-iframe-container">
  <iframe 
    id="shopify-chatbot-iframe"
    src="http://localhost:5173/chatbot-iframe.html"
    style="
      position: fixed;
      bottom: 0;
      right: 0;
      width: 400px;
      height: 500px;
      border: none;
      pointer-events: auto;
      z-index: 9999;
      background: transparent;
    "
    allow="clipboard-write"
    sandbox="allow-scripts allow-same-origin allow-forms"
  ></iframe>
</div>

<style>
  /* Mobile responsive adjustments */
  @media (max-width: 768px) {
    #shopify-chatbot-iframe {
      width: 100vw !important;
      height: 100vh !important;
      bottom: 0 !important;
      right: 0 !important;
    }
  }
  
  /* Ensure iframe doesn't block page content */
  #shopify-chatbot-iframe {
    max-width: 400px;
    max-height: 500px;
  }
</style>

<script>
  // Additional safety to ensure page interactions work
  document.addEventListener('DOMContentLoaded', function() {
    const iframe = document.getElementById('shopify-chatbot-iframe');
    if (iframe) {
      // Only enable pointer events on the iframe itself
      iframe.style.pointerEvents = 'auto';
    }
  });
</script>

